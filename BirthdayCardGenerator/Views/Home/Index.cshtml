@model BirthdayCardGenerator.Models.Birthday

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--Bootstrap CSS Reference-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Send a Birthday Card</title>
</head>
<body>

    <h4>Send a Birthday Card</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="BirthdayForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="From" class="control-label">From:</label>
                    <input asp-for="From" class="form-control" />
                </div>
                <br/>
                <div class="form-group">
                    <label asp-for="To" class="control-label">To:</label>
                    <input asp-for="To" class="form-control" />
                    
                </div>
                <br/>
                <div class="form-group">
                    <label asp-for="Message" class="control-label">Message:</label>
                    <input asp-for="Message" class="form-control" />
                </div>
                <br/>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Send Card</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
